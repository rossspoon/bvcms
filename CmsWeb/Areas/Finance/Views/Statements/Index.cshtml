@using CmsWeb
@{
    Layout = "/Views/Shared/Reports.cshtml";
    ViewBag.Title = "Contribution Statements";
    CassetteConfiguration.BundleRefJs();
    Bundles.AddInlineScript(
    @<script>
        $(function() {
            $(".datepicker").datepicker();
            $("a.bt").button();
        });
    </script>);
}
<h2>Contribution Statements</h2>
<a href="/">Home</a>
<form action="/Statements/ContributionStatements" method="post">
    <input type="hidden" name="startswith" value="@ViewBag.startswith"/>
    <table>
        <tr>
            <th>PDF: </th>
            <td>@Html.CheckBox("PDF", true) (otherwise, text extract) </td>
        </tr>
        <tr>
            <th>Start Date: </th>
            <td>@Html.DatePicker("FromDate")</td>
        </tr>
        <tr>
            <th>End Date: </th>
            <td>@Html.DatePicker("EndDate")</td>
        </tr>
        <tr>
            <td colspan="2" class="center">
                <input type="submit" class="bt" name="Submit" value="Run" /></td>
        </tr>
    </table>
</form>
